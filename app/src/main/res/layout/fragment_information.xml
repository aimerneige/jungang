<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.information.InformationFragment">

    <!-- TODO: Search Bar -->
    <TextView
        android:id="@+id/information_search_bar"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:text="I'm the Search Bar (TODO)"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information_search_bar"
        app:layout_constraintVertical_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="12dp"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginVertical="4dp"
                android:background="@color/PowderBlue"
                app:sLeftTextSize="24sp"
                app:sLeftTextString="@string/information_hot"
                app:sUseRipple="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_green"
                    android:src="@drawable/ic_error_black_24dp" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_blue"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_red"
                    android:src="@drawable/ic_error_black_24dp" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_yellow"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_add_gray_64dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="12dp"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginVertical="4dp"
                android:background="@color/PowderBlue"
                app:sLeftTextSize="24sp"
                app:sLeftTextString="@string/information_videos"
                app:sUseRipple="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_green"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_blue"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_red"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_yellow"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_add_gray_64dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="72dp"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginVertical="4dp"
                android:background="@color/PowderBlue"
                app:sLeftTextSize="24sp"
                app:sLeftTextString="@string/information_history"
                app:sUseRipple="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_green"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_blue"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_red"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/button_onclick_yellow"
                    android:src="@drawable/ic_error_black_24dp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#00000000"
                    android:src="@drawable/ic_add_gray_64dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>